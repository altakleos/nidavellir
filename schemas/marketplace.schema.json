{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/altakleos/plugins/schemas/marketplace.schema.json",
  "title": "Claude Code Marketplace Schema",
  "description": "Schema for validating marketplace.json files",
  "type": "object",
  "required": ["name", "owner", "metadata", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Marketplace identifier",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 1,
      "maxLength": 50
    },
    "owner": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["description", "version"],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "repository": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "plugins": {
      "type": "array",
      "description": "List of plugins in this marketplace",
      "items": {
        "type": "object",
        "required": ["name", "source", "description", "version", "author"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "minLength": 1
          },
          "source": {
            "type": "string",
            "description": "Relative path to plugin directory",
            "pattern": "^\\./plugins/"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?(\\+[a-zA-Z0-9.-]+)?$"
          },
          "author": {
            "type": "object",
            "required": ["name", "email"],
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          },
          "category": {
            "type": "string",
            "enum": [
              "productivity",
              "development",
              "testing",
              "documentation",
              "security",
              "ai-assistance",
              "utilities",
              "integration",
              "other"
            ]
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "description": "Marketplace-specific tags for discovery",
            "items": {
              "type": "string"
            }
          },
          "strict": {
            "type": "boolean",
            "description": "When false (default), plugin.json is authoritative. When true, marketplace entry overrides plugin.json",
            "default": false
          }
        }
      }
    }
  },
  "additionalProperties": false
}
